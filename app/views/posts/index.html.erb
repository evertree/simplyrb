<p id="notice"><%= notice %></p>

<% @posts.each do |post| %>
  <% @post = post %>
  <%= render 'post' %>

  <%= link_to comment_count, show_post_path(@post.url_title), :class => 'comment_link' unless comment_count == '0 comments' %>
<div class="add_comment">
  <%= link_to 'Add comment', show_post_path(@post.url_title) %>
</div>
<% end %>
